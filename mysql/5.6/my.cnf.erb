[mysqld]
performance_schema      = 0
bind-address            = 0.0.0.0
console                 = 1
general_log             = 0
general_log_file        = /dev/stdout
log_error               = /dev/stderr

key_buffer              = <%= ENV['MDB_SIZE'].to_i * 16 %>M
max_allowed_packet      = 4M
thread_stack            = 192K
thread_cache_size       = 8
thread_concurrency      = <%= ENV['MDB_SIZE'].to_i * 2 %>

#
# * Query Cache Configuration
#
query_cache_limit       = 1M
query_cache_size        = <%= ENV['MDB_SIZE'].to_i * 8 %>M

# InnoDB
# You can set .._buffer_pool_size up to 50 - 80 %
# of RAM but beware of setting memory usage too high
innodb_buffer_pool_size = <%= ENV['MDB_SIZE'].to_i * 128 %>M
innodb_additional_mem_pool_size = <%= ENV['MDB_SIZE'].to_i * 10 %>M
# Set .._log_file_size to 25 % of buffer pool size
innodb_log_file_size = <%= ENV['MDB_SIZE'].to_i * 32 %>M
innodb_log_buffer_size = <%= ENV['MDB_SIZE'].to_i * 4 %>M
